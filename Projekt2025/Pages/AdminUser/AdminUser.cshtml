@page
@model Projekt2025.Pages.AdminUser.AdminUserModel
@{
    ViewData["Title"] = "Admin Login";
}

<h1>Admin Login</h1>

<form method="post" asp-page-handler="Login">
    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" class="form-control" asp-for="Username" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" required />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (!ModelState.IsValid)
{
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
}
