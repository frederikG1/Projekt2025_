@page
@model Projekt2025.Pages.Event.EventModel

@{
    ViewData["Title"] = "Event";
}

<a asp-asp-page="Calender" class="btn btn-primary"> Vis events i kalenderen </a>

<h1>Alle Events</h1>

@if (Model.Events !=null && Model.Events.Any())
{
   <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>EventStart</th>
                <th>EventEnd</th>
                <th>Beskrivelse</th>
                <th>Lokation</th>
                <th>Pris</th>
                <th>Deltagere</th>
            </tr>
        </thead>
     <tbody>

        @foreach (var evt in Model.Events)
        {
        <tr>
            <td>@evt.Title</td>
            <td>@evt.EventDateTimeStart.ToString("dd-MM-yyyy HH:mm")</td>
            <td>@evt.EventDateTimeEnd.ToString("dd-MM-yyyy HH:mm")</td>
            <td>@evt.Description</td>
            <td>@evt.Location</td>
            <td>@evt.Price.ToString("dk")</td>
            <td>@evt.Participants</td>
        </tr>
       
        } 
     </tbody>
   </table>
}
