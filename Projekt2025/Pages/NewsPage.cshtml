@page
@model Projekt2025.Pages.NewsPage.IndexModel
@{
    ViewData["Title"] = "Nyheds Brev";
}

<h2>Nyheds Brev</h2>

<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input name="email" type="email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tilmeld</button>
</form>


@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success mt-3">@Model.Message</div>
}
